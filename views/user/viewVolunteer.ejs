<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Volunteers - <%= event.title %></title>
  <link rel="stylesheet" href="/css/header.css">

  <style>
    /* volunteer.css */

    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: #f5f7fa;
      color: #333;
      margin: 0;
      padding: 0;
    }

    .event-details {
      max-width: 700px;
      margin: 40px auto;
      background: #fff;
      padding: 30px 40px;
      border-radius: 8px;
      box-shadow: 0 3px 10px rgba(0,0,0,0.1);
    }

    .event-details h2 {
      font-weight: 700;
      margin-bottom: 25px;
      color: #222;
      text-align: center;
    }

    .event-details p {
      font-size: 18px;
      text-align: center;
      color: #666;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
      font-size: 16px;
    }

    table thead tr {
      background-color: #4a90e2;
      color: white;
      text-align: left;
    }

    table thead th, table tbody td {
      padding: 12px 15px;
      border: 1px solid #ddd;
    }

    table tbody tr:nth-child(even) {
      background-color: #f9fafe;
    }

    table tbody tr:hover {
      background-color: #e6f0ff;
    }

    .btn {
      display: inline-block;
      margin-top: 30px;
      padding: 12px 25px;
      background-color: #4a90e2;
      color: #fff;
      text-decoration: none;
      border-radius: 5px;
      font-weight: 600;
      border: none;
      cursor: pointer;
      transition: background-color 0.3s ease;
      font-size: 16px;
      text-align: center;
    }

    .btn:hover {
      background-color: #357ABD;
    }

    /* Responsive */
    @media (max-width: 640px) {
      .event-details {
        margin: 20px;
        padding: 20px;
      }

      table, thead, tbody, th, td, tr {
        display: block;
      }

      thead tr {
        position: absolute;
        top: -9999px;
        left: -9999px;
      }

      tbody tr {
        margin-bottom: 15px;
        border: 1px solid #ddd;
        border-radius: 5px;
        padding: 10px;
      }

      tbody td {
        border: none;
        position: relative;
        padding-left: 50%;
        text-align: right;
      }

      tbody td::before {
        position: absolute;
        left: 15px;
        width: 45%;
        padding-right: 10px;
        white-space: nowrap;
        font-weight: 700;
        text-align: left;
        content: attr(data-label);
      }

      .btn {
        width: 100%;
        padding: 12px 0;
        font-size: 16px;
      }
    }
  </style>
</head>
<body>

  <%- include('../partials/header') %>

  <section class="event-details">
    <h2>Volunteers for: <%= event.title %></h2>

    <% if (volunteers.length === 0) { %>
      <p>No volunteers have registered for this event yet.</p>
    <% } else { %>
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>StudentNo</th>
            <th>Phone</th>
            <th>Course</th>
          </tr>
        </thead>
        <tbody>
          <% volunteers.forEach(vol => { %>
            <tr>
              <td data-label="Name"><%= vol.fullName %></td>
              <td data-label="Email"><%= vol.email %></td>
              
              <td data-label="StudentNo"><%= vol.studentNumber %></td>
              <td data-label="Phone"><%= vol.phone %></td>
              <td data-label="Course"><%= vol.course %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } %>

    <a href="/events/<%= event.id %>" class="btn back-btn">‚Üê Back to Event Details</a>
  </section>

  <%- include('../partials/footer') %>

</body>
</html>
